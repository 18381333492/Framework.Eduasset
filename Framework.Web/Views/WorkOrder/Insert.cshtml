<script type="text/javascript">
    $(function () {
        domin.bingEvent();
        domin.initControl();
        domin.loadWeChatConfig();//加载微信配置
        domin.initApprovalPersonList();//初始化审批人列表
    });

    var domin = (function (obj) { return obj; }(new function () {

        var WeChat = new wxhelper();
        var localIds = [];
        var serverIds = [];

        //初始化时间控件
        function initControl() {
            $("input[name=PlanStartDate]").datetimePicker();
            $("input[name=PlanEndDate]").datetimePicker();
        }

        //注入微信配置
        function loadWeChatConfig() {
            client.ajax.getRequest("/WeChat/GetWeChatConfig", null, function (r) {
                //获取微信配置
                var appId = r.data.appId;
                var timestamp = r.data.timestamp;
                var nonceStr = r.data.noncestr;
                var signature = r.data.signature;
                WeChat.config(appId, timestamp, nonceStr, signature);
            }, function (r) {
                alert(r.info);
            });
        }

        //下载上传图片
        function downloadImage(serverIds) {
            $.showLoading("正在上传");
            client.ajax.postRequest("/WeChat/UploadImage", { serverIds: serverIds.join() }, function (r) {
                $.hideLoading();
                var imageList = r.data;
                var html = [];
                $(imageList).each(function (index,url) {
                    html.push('<div class="upload_img" style="position:relative;float:left;margin-left:5px;">');
                    html.push('<img src="' + url + '" class="img" />');
                    html.push('<img src="/eduasset_chat/Content/img/del.png" class="del">');
                    html.push('</div>');
                });
                $(html.join('')).insertBefore($(".addImage"));
                //绑定图片删除事件
                $('.del').off("click").on("click", function () {
                    $(this).parents(".upload_img").remove();
                });
            });
        }

        //上传图片
        function uploadImage() {
            try {
                (function (localId) {//异步闭包
                    ////解决IOS无法上传的坑
                    //if (localId.indexOf("wxlocalresource") != -1) {
                    //    localId = localId.replace("wxlocalresource", "wxLocalResource");
                    //}
                    WeChat.uploadImage(localId, function (res) {
                        serverIds.push(res.serverId);// 返回图片的服务器端ID
                        if (serverIds.length != localIds.length) {
                            uploadImage();
                        }
                        else {
                            //上传完毕，下载图片
                            downloadImage(serverIds);
                        }
                    });
                })(localIds[serverIds.length]);
            } catch (e) {
                alert(e.message);
            }
        }

        //事件绑定
        function bingEvent() {

            //点击选择图片
            $('.addImage').on("click", function () {
                 localIds = [];//清空数组
                 serverIds = [];//清空数组
                 var uploadCount = $('.upload_img').length;//已经上传的张数
                 if (uploadCount < 4) {
                    var count = 4 - uploadCount;//还能上传的图片张数
                    WeChat.chooseImage(count, function (r) {
                        localIds = r.localIds;
                        uploadImage();
                    });
                }
                else {
                    $.toast("最多上传四张图片", "text");
                }
            });
            
            //增加配件
            $('.add_box').on("click", function (event) {
                var html = template("AddForm")();
                $(html).insertBefore(".last_div");
            });

            //删除配件
            $('.cancel_box').on("click", function (event) {
                $('.cancelform').last().remove();
            });


            //提交工单
            $('.footter').on("click", function () {
                $.showLoading("正在提交");
                var submitDatas = {};
                var Parts = [];
                submitDatas.RepairApplyCode = $('input[name=RepairApplyCode]').val();
                submitDatas.PlanStartDate = $('input[name=PlanStartDate]').val();
                submitDatas.PlanEndDate = $('input[name=PlanEndDate]').val();
                submitDatas.FaultReason = $('input[name=FaultReason]').val();
                submitDatas.DealWay = $('textarea[name=DealWay]').val();
                submitDatas.DealerName = $('input[name=DealerName]').val();//处理人姓名
                submitDatas.ServicePersons = $('input[name=ServicePersons]').val();//维修人员姓名
                submitDatas.ToApprovIds = $('#ToApprovIds').val();
                submitDatas.ToApprovNames = $('#ToApprovNames').val();
                var images = $('.upload_img');
                for (var i = 1; i <=images.length; i++) {
                    submitDatas["DealPicPath" + i] = $(images).eq(i - 1).find(".img").attr("src");
                }
                //添加配件列表
                var partsElement = $('.autoform');
                $(partsElement).each(function () {
                    var PartName= $('input[name=PartName]',$(this)).val();
                    var ProductModel= $('input[name=ProductModel]',$(this)).val();
                    var ConsumeNumber= $('input[name=ConsumeNumber]',$(this)).val();
                    var NumberUnit= $('input[name=NumberUnit]',$(this)).val();
                    var Price = $('input[name=Price]', $(this)).val();
                    Parts.push({
                        PartName: PartName,
                        ProductModel: ProductModel,
                        ConsumeNumber: ConsumeNumber,
                        NumberUnit: NumberUnit,
                        Price: Price,
                    });         
                });
                submitDatas.Parts = Parts;
                client.ajax.postRequest("/WorkOrder/Insert", { submitDatas: JSON.stringify(submitDatas) }, function (r) {
                    $.hideLoading();
                    $.toast("创建成功");
                    setTimeout(function () {
                        var userType = $('#RoleType').val();
                        if (userType == 2)
                            location.href = client.baseUrl + "/Form/RepairMan";
                        else
                            location.href = client.baseUrl + "/Form/RepairTask";
                    },500)
                }, function (r) {
                    $.hideLoading();
                    $.toast(r.info, "text");
                });
            });
        }
        
        //初始化审批人列表
        function initApprovalPersonList() {
            var integratorCode = $('#IntegratorCode').val();
            client.ajax.getRequest("/WorkOrder/GetApprovalPersonList", { integratorCode: integratorCode }, function (r) {
                var personArray = JSON.parse(r.data);
                var html = [];
                $(personArray).each(function () {
                    html.push('<a class="seitem" value="' + this.RecordID + '">' + this.RealName + '</a>')
                });
                $('.selist').html(html.join(''));
                multselInit();//渲染插件
            });
        }

        return {
            initControl:initControl,
            bingEvent: bingEvent,
            loadWeChatConfig: loadWeChatConfig,
            initApprovalPersonList: initApprovalPersonList
        }
    }));
</script>
