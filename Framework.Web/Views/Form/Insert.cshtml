<script src="~/Scripts/jweixin-1.2.0.js"></script>
<script src="~/Scripts/wxhelper.js"></script>
<script type="text/javascript">
    $(function () {
        domin.bingEvent();
        domin.initControl();
        domin.loadWeChatConfig();//加载微信配置  
        domin.GetDeviceInfoByCode();
    });

    var domin = (function (obj) { return obj; }(new function () {

        var WeChat = new wxhelper();
        var deviceInfo = {};//设备信息
        var DeviceArray = [];//设备信息的数组
        var localIds = [];
        var serverIds = [];

        //初始化时间控件
        function initControl() {
            $("input[name=FaultDate]").datetimePicker();
            $("input[name=RequireStartDate]").datetimePicker();
            $("input[name=RequireEndDate]").datetimePicker();
        }

        //注入微信配置
        function loadWeChatConfig() {
            client.ajax.getRequest("/WeChat/GetWeChatConfig", null, function (r) {
                //获取微信配置
                var appId = r.data.appId;
                var timestamp = r.data.timestamp;
                var nonceStr = r.data.noncestr;
                var signature = r.data.signature;
                WeChat.config(appId, timestamp, nonceStr, signature);
            }, function (r) {
                alert(r.info);
            });
        }

        //下载上传图片
        function downloadImage(serverIds) {
            $.showLoading("正在上传");
            client.ajax.postRequest("/WeChat/UploadImage", { serverIds: serverIds.join() }, function (r) {
                $.hideLoading();
                var imageList = r.data;
                var html = [];
                $(imageList).each(function (index,url) {
                    html.push('<img src="' + url + '" class="img" />');
                });
                $(html.join('')).insertBefore("#addImage");
            });
        }

        //上传图片
        function uploadImage() {
            try {
                (function (localId) {//异步闭包 
                    ////解决IOS无法上传的坑
                    //if (localId.indexOf("wxlocalresource") != -1) {
                    //    localId = localId.replace("wxlocalresource", "wxLocalResource");
                    //}
                    WeChat.uploadImage(localId, function (res) {
                        serverIds.push(res.serverId);// 返回图片的服务器端ID
                        if (serverIds.length != localIds.length) {
                            uploadImage();
                        }
                        else {
                            //上传完毕，下载图片
                            downloadImage(serverIds);
                        }
                    });
                })(localIds[serverIds.length]);
            } catch (e) {
                alert(e.message);
            }
        }

        //事件绑定
        function bingEvent() {

            //点击选择图片
            $('#addImage').on("click", function () {
                if ($('.img').length < 5) {
                    var count =5-$('.img').length;//还能上传的图片张数
                    WeChat.chooseImage(count, function (r) {
                        localIds = r.localIds;
                        uploadImage();
                    });
                }
                else {
                    $.toast("最多上传四张图片", "text");
                }
            });

            //提交保修单
            $('.footter').on("click", function () {
                var params = $('#commit_form').serialize();
                client.ajax.postRequest("/Form/Insert", params, function (r) {
                    $.toast("保修成功");
                    setTimeout(function () {
                        location.href = "/Form/Teacher";
                    },500)
                });
            });

            //切换门牌号事件绑定
            $('select[name=HouseNo]').change(function () {
                deviceInfo.HouseNo = $(this).val();
                //初始化设备列表
                initDeviceList();
            });

            //切换设备类型事件绑定
            $('select[name=TypeName]').change(function () {
                deviceInfo.TypeName = $(this).val();
                //初始化设备名称
                initDeviceName(true);
            });

            //切换设备名称事件绑定
            $('select[name=DeviceName]').change(function () {
                deviceInfo.RecordID = $(this).val();
                initDeviceDetail();
            });
        }

        //获取设备信息
        function GetDeviceInfoByCode(deviceCode) {
            client.ajax.getRequest("/Form/GetDeviceInfoByCode", { deviceCode: deviceCode }, function (r) {
                deviceInfo = JSON.parse(r.data.deviceInfo);
                var RealName = r.data.RealName;
                $('input[name=ClassName]').val(deviceInfo.ClassName);
                $('input[name=Linkman]').val(RealName);//默认用户的登录真实姓名

                initHouseList(); //初始化门牌号下拉列表
                initDeviceList();//初始化设备列表和设备类型
            });
        }

        //初始化门牌号下拉列表
        function initHouseList() {
            //初始化门牌号下拉列表
            client.ajax.getRequest("/Form/GetHouseListByOrgCode", { OrgCode: deviceInfo.OrgCode }, function (r) {
                var houseArray = JSON.parse(r.data);
                var html = [];
                $(houseArray).each(function () {
                    html.push('<option value="' + this.HouseNo + '">' + this.HouseNo + '</option>');
                });
                $('select[name=HouseNo]').html(html.join(''));
                //设置门牌号默认值
                $('select[name=HouseNo]').val(deviceInfo.HouseNo);
            });
        }

        //初始化设备列表和设备类型
        function initDeviceList() {
            client.ajax.getRequest("/Form/GetDeviceListByOrgCodeAndHouseNo", { OrgCode: deviceInfo.OrgCode, HouseNo: deviceInfo.HouseNo }, function (r) {
                DeviceArray = JSON.parse(r.data);
                var Typehtml = [];
                $(DeviceArray).each(function () {
                    Typehtml.push('<option value="' + this.TypeName + '">' + this.TypeName + '</option>');
                });
                $('select[name=TypeName]').html(Typehtml.join(''));
                //设置设备类型默认值
                $('select[name=TypeName]').val(deviceInfo.TypeName);      
                initDeviceName();  //初始化设备名称下拉数据
            });
        }

        //初始化设备名称下拉数据
        function initDeviceName(change) {
            var DeviceNameArray = [];//设备名称数组
            $(DeviceArray).each(function () {
                if (this.TypeName == deviceInfo.TypeName) {
                    DeviceNameArray = this.Items;
                    return false;
                }
            });
            var DeviceNameHtml = [];
            $(DeviceNameArray).each(function () {
                DeviceNameHtml.push('<option value="' + this.RecordID + '">' + this.DeviceName + '</option>');
            });
            $('select[name=DeviceName]').html(DeviceNameHtml.join(''));
            //设置默认的设备名称
            if (change) deviceInfo.RecordID = DeviceNameArray[0].RecordID;//默认取第一个
            $('select[name=DeviceName]').val(deviceInfo.RecordID);
            initDeviceDetail(); //初始化设备详情
        }
        
        //初始化设备详情
        function initDeviceDetail() {
            var TypeName = $('select[name=TypeName]').val();
            var detailInfo = {};
            var isFind = false;
            //查找设备设备的详细信息
            $(DeviceArray).each(function () {
                if (this.TypeName == deviceInfo.TypeName)
                {
                    $(this.Items).each(function (index, item) {
                        if (item.RecordID == deviceInfo.RecordID) {
                            isFind = true;
                            detailInfo = item;
                            return false;
                        }
                    });
                }
                if (isFind) {
                    return false;
                }
            });
            $('input[name=StorePlace]').val(detailInfo.StorePlace);
            $('input[name=IntegratorName]').val(detailInfo.IntegratorName);//设置维修单位
        }

        return {
            initControl:initControl,
            GetDeviceInfoByCode:GetDeviceInfoByCode,
            bingEvent: bingEvent,
            loadWeChatConfig: loadWeChatConfig
        }
    }));
</script>
